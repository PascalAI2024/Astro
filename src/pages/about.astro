---
import Layout from '../layouts/Layout.astro';
import Container from '../components/common/Container.astro';

const features = [
  {
    name: 'AI-Powered Content',
    description: 'Leveraging GPT-4 to generate accurate and engaging astronomy content.',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456zM16.894 20.567L16.5 21.75l-.394-1.183a2.25 2.25 0 00-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 001.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 001.423 1.423l1.183.394-1.183.394a2.25 2.25 0 00-1.423 1.423z" />
    </svg>`,
  },
  {
    name: 'DALL-E Integration',
    description: 'Creating stunning, scientifically accurate astronomical visualizations.',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5zm10.5-11.25h.008v.008h-.008V8.25zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
    </svg>`,
  },
  {
    name: 'Educational Focus',
    description: 'Making complex astronomical concepts accessible to everyone.',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M4.26 10.147a60.436 60.436 0 00-.491 6.347A48.627 48.627 0 0112 20.904a48.627 48.627 0 018.232-4.41 60.46 60.46 0 00-.491-6.347m-15.482 0a50.57 50.57 0 00-2.658-.813A59.905 59.905 0 0112 3.493a59.902 59.902 0 0110.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.697 50.697 0 0112 13.489a50.702 50.702 0 017.74-3.342M6.75 15a.75.75 0 100-1.5.75.75 0 000 1.5zm0 0v-3.675A55.378 55.378 0 0112 8.443m-7.007 11.55A5.981 5.981 0 006.75 15.75v-1.5" />
    </svg>`,
  },
];

const team = [
  {
    name: 'Cosmic AI',
    role: 'AI Content Generator',
    imageUrl: '/images/ai-avatar.jpg',
    bio: 'Powered by GPT-4, creating engaging and accurate astronomy content.',
  },
  {
    name: 'DALL-E',
    role: 'AI Image Generator',
    imageUrl: '/images/dalle-avatar.jpg',
    bio: 'Creating stunning astronomical visualizations and artistic interpretations.',
  },
];
---

<Layout title="About Cosmic AI">
  <Container>
    <div class="py-16 sm:py-24">
      <div class="mx-auto max-w-2xl lg:mx-0">
        <h1 class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-6xl">
          About Cosmic AI
        </h1>
        <p class="mt-6 text-lg leading-8 text-gray-600 dark:text-gray-400">
          Exploring the cosmos through the lens of artificial intelligence, making astronomy accessible and engaging for everyone.
        </p>
      </div>

      <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
        <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3">
          {features.map((feature) => (
            <div class="flex flex-col">
              <dt class="text-base font-semibold leading-7 text-gray-900 dark:text-white">
                <div class="mb-6 flex h-10 w-10 items-center justify-center rounded-lg bg-purple-600">
                  <Fragment set:html={feature.icon} />
                </div>
                {feature.name}
              </dt>
              <dd class="mt-1 flex flex-auto flex-col text-base leading-7 text-gray-600 dark:text-gray-400">
                <p class="flex-auto">{feature.description}</p>
              </dd>
            </div>
          ))}
        </dl>
      </div>

      <div class="mx-auto mt-32 max-w-2xl sm:mt-40 lg:mx-0 lg:max-w-none">
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl">Meet the Team</h2>
        <p class="mt-6 text-lg leading-8 text-gray-600 dark:text-gray-400">
          Our AI-powered platform combines cutting-edge language models and image generation to create engaging astronomy content.
        </p>
        <ul role="list" class="mx-auto mt-20 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-2">
          {team.map((person) => (
            <li>
              <img class="aspect-[3/2] w-full rounded-2xl object-cover" src={person.imageUrl} alt="" />
              <h3 class="mt-6 text-lg font-semibold leading-8 tracking-tight text-gray-900 dark:text-white">{person.name}</h3>
              <p class="text-base leading-7 text-purple-600 dark:text-purple-400">{person.role}</p>
              <p class="mt-4 text-base leading-7 text-gray-600 dark:text-gray-400">{person.bio}</p>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </Container>
</Layout>